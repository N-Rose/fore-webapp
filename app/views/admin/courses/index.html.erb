

<div class="container">

<% content_for :side_nav do %>
  <%= render :partial => 'admin/shared/side_nav' %>
<% end %>

  <div class="panel panel-default">
    <h2>Course List</h2>
    <div class="panel panel-default">
      <div class="panel-body">
        <div id="course-search-form">
          <div class="col-md-3" style="padding:0px;">
            <%= form_tag(nil, url: {controller: 'courses', action: 'search'}, method: "post" ) do |f|%>
              <%= text_field_tag :course, "", class: "form-control", placeholder: "Search Courses" %>
            <%end%>
          </div>
          <div class="col-md-9">
          </div>
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>COURSE NAME</th>
              <th>LOCATION</th>
              <th>RESORT</th>
              <th>NETWORK</th>
            </tr>
          </thead>

          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= link_to course.name, admin_course_path(course) %></td>
                <td><%= course.try(:formated_location) %></td>
                <td><%= course.resort.try(:name) %></td>
                <td><%= course.network.try(:name) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>      

      </div>
    </div>
  </div>

  
</div>


