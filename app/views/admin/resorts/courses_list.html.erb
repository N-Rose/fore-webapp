<div class="clearfix"></div>
<div class="select_course_body clearfix">
	<% @courses.each do |course| %>
		<div class="col-md-12 course_list_item">
			<%= image_tag course.cover.url %>
			<%= link_to embed_display_info_path(course), class: "play_button", data: { turbolinks: false} do %>
				<%= image_tag "big-play.png" %>
			<% end %>
			<div class="course_info">
				<h2 class="course_title"><%= course.name %></h2>
				<p class="course_description" title="<%= course.bio %>"><%= course.bio %></p>
			</div>
		</div>
	<% end %>
</div>
<div class="signature pt-20 pb-20 select_course_footer">
  <center><%= link_to image_tag("signature_v2.png"), "https://foregolf.com", target: :_blank %></center>
</div>
<script type="text/javascript">
  $(window).load(function() {
    $(".se-pre-con").fadeOut("slow");
  });
</script>
