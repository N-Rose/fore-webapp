  <div class="row description">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6">
          <h3><b><%= @hole.hole_num %><%= @hole.hole_num==1 ? 'st' : @hole.hole_num==2 ? 'nd' : @hole.hole_num==3 ? 'rd' : 'th' %> Hole, Par <%= @hole.par%></b></h3>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h4><%= @hole.description %></h4>
        </div>
      </div>
    </div>

    <div class="col-md-6 yards">
      <% @hole.course.score_cards.each do |tee| %>
        <span class="points">
          <!-- <h3><b><%#= @hole.hole_num %> Hole</b></h3> -->
          <% yard = @hole.yardages.find_by(score_card_id: tee.id)%>
          <h3><%= image_tag "tees/#{tee.color}.png" %><b> <%= yard.present? ? yard.yards : 'N/A' %> YDS</b></h3>
        </span>
      <%end%>
    </div>
  </div>
  <div class="row slider">
    <div class="col-md-12 st1">
       <div class="btn-group btn-group-lg map-slecter">
        <button type="button" class="btn" id="select_map">Map</button>
        <button type="button" class="btn" id="select_photos">Photos</button>
      </div>
      <div id="11">
        <ul id="map">
          <li><%=image_tag @hole.map.url %></li>
        </ul>
      </div>
      <div id="22">
        <ul id="slider" class="bxslider">
          <% @hole.hole_image.each do | holeimage | %>
            <li><%=image_tag holeimage.image.url %></li>
          <% end%>
        </ul>
      </div>
    </div>
    <div class="col-md-12 st2">
      <div class="row">
        <div class="col-md-12">
          <div class="divider">Map</div>
          <%=image_tag @hole.map.url %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="divider">Photos</div>
          <ul id="slider1" class="bxslider">
            <% @hole.hole_image.each do | holeimage | %>
