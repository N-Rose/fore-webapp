  <script src="https://cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.12/jquery.bxslider.js"></script>

  <div class="row description">
    <div class="col-md-7 about">
      <div class="row">
        <div class="col-md-6">
          <h3><b>About The Course</b></h3>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 bio">
          <h4><%= @course.bio %></h4>
        </div>
      </div>
    </div>
    
    <div class="col-md-5 specs">
      <div class="row">
        <div class="col-md-6">
          <h3><b>Course Specs</b></h3>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          
          <div class="row">
            <div class="col-md-12 sp-rows">
              <span class="values"><h4>Holes: <%= @course.holes.count %></h4></span>
            
              <span class="values"><h4>Par: <%= @course.total_par %></h4></span>
            
              <span class="values"><h4>Slope: <%= @course.slope %></h4></span>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 ">
              <span class="values"><h4>Rating: <%= @course.rating %></h4></span>
            
              <span class="values"><h4>Yardages: <%= @course.length %></h4></span>
            
              <span class="values"><h4>Tee Boxes: <%= @course.score_cards.count %></h4></span>
            </div>
          </div>


        </div>
      </div>
    </div>  
  </div>
  <div class="row description2">
    <div class="col-md-7">
      <div class="row">
          <div class="col-md-12">
            <h3><b>Amenities</b></h3>
          </div>
        </div>
        <div class="row amenity-wrap">
          <div class="col-md-12">
            <div class="row">
              <% @course.amenities.each do |amenity| %>

                <% if amenity.restaurants %>
                  <span class="amenity">
                  <h4><%= image_tag "amenities/restaurant.png", class: 'restaurant' %>Restaurant</h4></span>
                <% end %>

                <% if amenity.caddies %>
                  <span class="amenity">
                  <h4><%= image_tag "amenities/caddies.png", class: 'caddies' %>Caddies</h4></span>
                <% end %>

                <% if amenity.carts %>
                  <span class="amenity">
                  <h4><%= image_tag "amenities/carts.png", class: 'carts' %>Carts</h4></span>
                <% end %>

                <% if amenity.golf_boards %>
                  <span class="amenity">
                  <h4><%= image_tag "amenities/golfboard.png", class: 'golfboard' %>Golfboards</h4></span>
                <% end %>

                <% if amenity.practice_range %>
                  <span class="amenity pp">
                  <h4><%= image_tag "amenities/practice-range.png", class: 'practice-range' %>Practice Range</h4></span>
                <% end %>

              <% end%>
            </div>
          </div>
        </div>
      </div>
   

    <div class="col-md-5">
      <div class="row">
        <div class="col-md-12">
          <h3><b>Architect</b></h3>
        </div>
        
        <div class="row">
          <div class="col-md-12 architect">
           <h4><%= @course.architect %></h4>
          </div>
        </div>
      </div>
    </div>
 </div>
            

  <div class="row slider">
    <div class="col-md-12 st1">
       <div class="btn-group btn-group-lg map-slecter">
        <button type="button" class="btn" id="select_map">Score Card</button>
        <button type="button" class="btn" id="select_photos">Photos</button>
      </div> 
      <ul id="map">
        <li><%=image_tag @course.score_card_image.url %></li>
      </ul>
      <ul id="slider" class="bxslider">
        <% @course.course_images.each do | courseimage | %>
          <li><%=image_tag courseimage.photo.url %></li>
        <% end%>
      </ul>
    </div>
    <div class="col-md-12 st2"> 
      <div class="row">
        <div class="col-md-12">
          <div class="divider">Map</div>
          <%=image_tag @course.score_card_image.url %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="divider">Photos</div>
          <ul id="slider" class="bxslider">
            <% @course.course_images.each do | courseimage | %>
              <li><%=image_tag courseimage.photo.url %></li>
            <% end%>
          </ul>
         </div>
      </div>
    </div>
  </div>

<script type="text/javascript">
$(document).ready(function(){
  $('.bxslider').bxSlider({
    mode: 'horizontal',
    useCSS: false,
    // infiniteLoop: false,
    // hideControlOnEnd: true,
    // // easing: 'easeOutElastic',
    // speed: 2000,
      pager: false,
      nextText: '<%= image_tag "right.png" %>',
      prevText: '<%= image_tag "left.png" %>'
   });
});

$('#select_map').click(function (){
  $('.bx-wrapper').hide();
  // $('#slider').hide();
  $('#select_photos').removeClass('selected');
  $('#select_photos').addClass('non-selected');

  $('#map').show();
  $('#select_map').removeClass('non-selected');
  $('#select_map').addClass('selected');

  $('.bx-next').hide();
  $('.bx-prev').hide();
});

$('#select_photos').click(function (){
  $('#map').hide();
  $('#select_map').removeClass('selected');
  $('#select_map').addClass('non-selected');

  $('.bx-wrapper').show();
  // $('#slider').show();
  $('#select_photos').removeClass('non-selected');
  $('#select_photos').addClass('selected');

  $('.bx-next').show();
  $('.bx-prev').show();
});

$(document).ready(function() { $('#select_photos').trigger('click') });

